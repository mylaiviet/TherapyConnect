# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/therapyconnect

# Session Configuration
SESSION_SECRET=your-secret-key-change-in-production

# Encryption Key (for PHI tokenization)
ENCRYPTION_KEY=your-32-character-encryption-key

# GeoIP Configuration (optional)
# Path to MaxMind GeoLite2-City.mmdb database file
# If not set, defaults to server/data/GeoLite2-City.mmdb
# GEOIP_DATABASE_PATH=/path/to/GeoLite2-City.mmdb

# AWS Configuration (for production deployment)
# AWS_REGION=us-east-1
# AWS_SECRET_NAME=therapyconnect/production
# USE_PARAMETER_STORE=true

# Server Configuration
PORT=5000
NODE_ENV=development

# Matomo Analytics Configuration
# Anonymous visitor tracking (client-side)
VITE_MATOMO_URL=https://analytics.yourdomain.com
VITE_MATOMO_SITE_ID=1

# Authenticated user tracking (server-side)
MATOMO_URL=https://analytics.yourdomain.com
MATOMO_SITE_ID=2
MATOMO_AUTH_TOKEN=your-matomo-auth-token-here

# Document Storage Configuration (for credentialing documents)
# Options: 'local' | 'supabase' | 's3'
STORAGE_BACKEND=local
UPLOADS_PATH=./uploads

# Supabase Storage (if using STORAGE_BACKEND=supabase)
# SUPABASE_URL=https://your-project.supabase.co
# SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# AWS S3 Storage (if using STORAGE_BACKEND=s3)
# S3_BUCKET=therapyconnect-documents
# AWS_REGION=us-east-1
# AWS credentials should be set via AWS CLI or environment variables

# Email Configuration (for credentialing notifications)
# Set EMAIL_ENABLED=true to enable email notifications
EMAIL_ENABLED=false

# Email Provider: 'smtp' | 'sendgrid' | 'ses'
EMAIL_PROVIDER=smtp

# SMTP Configuration (for generic SMTP or Gmail)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# SendGrid Configuration (if using EMAIL_PROVIDER=sendgrid)
# EMAIL_PASSWORD should be your SendGrid API key
# EMAIL_HOST and EMAIL_PORT are ignored when using SendGrid

# AWS SES Configuration (if using EMAIL_PROVIDER=ses)
# EMAIL_USER=your-smtp-username
# EMAIL_PASSWORD=your-smtp-password
# AWS_REGION must be set to your SES region

# Email Sender Configuration
EMAIL_FROM=noreply@therapyconnect.com
EMAIL_FROM_NAME=TherapyConnect Credentialing

# Support Email (displayed in email templates)
SUPPORT_EMAIL=credentialing@therapyconnect.com

# Base URL (for links in emails)
BASE_URL=http://localhost:5000
