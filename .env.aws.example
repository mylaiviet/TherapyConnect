# AWS Environment Variables for KareMatch
# Copy this file to .env.aws and fill in your values
# DO NOT commit .env.aws to version control

# ============================================
# AWS Configuration
# ============================================

# AWS Region where resources are deployed
AWS_REGION=us-east-1

# AWS Account ID (for reference)
# AWS_ACCOUNT_ID=123456789012

# ============================================
# Application Secrets
# ============================================

# These are loaded from AWS Secrets Manager in production
# For local testing against AWS resources, set these manually:

# DATABASE_URL=postgresql://username:password@rds-endpoint:5432/karematch?sslmode=require
# ENCRYPTION_KEY=your-32-character-encryption-key-here
# SESSION_SECRET=your-session-secret-here

# Name of the secret in AWS Secrets Manager
AWS_SECRET_NAME=karematch-app-secrets-XXXX

# ============================================
# Terraform Variables (Optional)
# ============================================

# If you want to override Terraform defaults, uncomment and set:

# TF_VAR_aws_region=us-east-1
# TF_VAR_environment=production
# TF_VAR_project_name=karematch

# Database configuration
# TF_VAR_db_instance_class=db.t4g.micro
# TF_VAR_db_allocated_storage=20

# ECS configuration
# TF_VAR_ecs_task_cpu=512
# TF_VAR_ecs_task_memory=1024
# TF_VAR_ecs_desired_count=2

# Domain and SSL (leave empty if not using custom domain)
# TF_VAR_domain_name=karematch.com
# TF_VAR_acm_certificate_arn=arn:aws:acm:us-east-1:123456789012:certificate/...

# ============================================
# Deployment Configuration
# ============================================

# Node environment for builds
NODE_ENV=production

# Build output directory
# BUILD_OUTPUT_DIR=dist/public

# ============================================
# Monitoring & Logging
# ============================================

# Log retention (days)
# TF_VAR_log_retention_days=30

# Enable Container Insights (additional cost)
# TF_VAR_enable_container_insights=true

# ============================================
# Security & Compliance
# ============================================

# HIPAA compliance mode (always true for production)
HIPAA_COMPLIANT=true

# Enable encryption at rest (always true for HIPAA)
ENABLE_ENCRYPTION=true

# Force SSL connections (always true for HIPAA)
FORCE_SSL=true
